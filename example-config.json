{
  "logFilePath": "/[PATH-TO-LOG-DIRECTORY]/marvin.log",
  "watchPaths": [
    "/[FIRST-PATH]",
    "/[SECOND-PATH]"
  ],
  "recursion": true,
  "watchEvents": {
    "access": false,
    "attrib": false,
    "close": false,
    "create": true,
    "delete": true,
    "modify": true,
    "move": true,
    "open": false,
    "unmount": false
  },
  "notifications": {
    "frequencyInMinutes": 10,
    "mailgun": {
      "enabled": true,
      "apiKey": "[YOUR-MAILGUN-API-KEY]",
      "domainName": "[YOUR-MAILGUN-DOMAIN]",
      "emailAddress": "[YOUR-EMAIL-ADDRESS]"
    },
    "mattermost": {
      "enabled": true,
      "mattermost_api_key": "[YOUR-MATTERMOST-API-KEY]",
      "mattermost_url": "[YOUR-MATTERMOST-URL]"
    },
    "pushover": {
      "enabled": true,
      "pushover_app_token": "[YOUR-PUSHOVER-APP-TOKEN]",
      "pushover_user_key": "[YOUR-PUSHOVER-USER-KEY]"
    }
  }
}
